<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="DouShouQiApp.Views.PseudoPlayerOrIA">

    <ScrollView Background="{AppThemeBinding Light={StaticResource BgObject-LIGHT}, Dark={StaticResource BgObject-DARK}}" 
                MaximumHeightRequest="33">
        <VerticalStackLayout>
            <Label Text="{Binding Name}"  
                   TextColor="{AppThemeBinding Light={StaticResource Text-LIGHT}, Dark={StaticResource Text-DARK}}"
                   HorizontalOptions="Start"
                   FontSize="Medium"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
