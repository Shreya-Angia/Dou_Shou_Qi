                        <views:leaderboardCard/>
                        <views:leaderboardCard/>
                        <views:leaderboardCard/>
                        <views:leaderboardCard/>
                        <views:leaderboardCard/>
                        <views:leaderboardCard/>
                        <views:leaderboardCard/>
