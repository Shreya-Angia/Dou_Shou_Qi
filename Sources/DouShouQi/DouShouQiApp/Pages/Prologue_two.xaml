<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DouShouQiApp.Pages.Prologue_two"
             Shell.NavBarIsVisible="False"
             Title="Prologue_two">
    <Grid>
        <Image Source="slide_two.png" Aspect="AspectFill"/>

        <Grid RowDefinitions="*,Auto" ColumnDefinitions="*,Auto">


            <Label Text="With one divine strike, peace was broken. Temples crumbled, stars fell, and the war of gods ignited across the mortal world. There is no turning back now."
                   Grid.Row="1" Grid.Column="0"
                   HorizontalOptions="Start" 
                   VerticalOptions="End" 
                   Margin="30" 
                   FontSize="25" 
                   TextColor="White"
                   FontAttributes="Italic"
                   BackgroundColor="#80000000"  />

            <Button Text="Next"
                    Clicked="GoToPrologue_three"  
                    Grid.Row="1" Grid.Column="1"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="30"
                    BackgroundColor="DarkRed"
                    BorderColor="Goldenrod"
                    BorderWidth="2"
                    Padding="12"
                    WidthRequest="110"/>
        </Grid>

    </Grid>
</ContentPage>