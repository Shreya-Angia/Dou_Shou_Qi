        ContentTemplate="{DataTemplate pages:StartPage}"
        Route="StartPage"/>
    
    <ShellContent
        Title="Prologue1"
        ContentTemplate="{DataTemplate pages:Prologue_one}"  
        Route="Prologue_one"
        Shell.FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Prologue2"
        ContentTemplate="{DataTemplate pages:Prologue_two}"  
        Route="Prologue_two"
        Shell.FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Prologue3"
