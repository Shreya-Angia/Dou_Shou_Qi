        ContentTemplate="{DataTemplate pages:PageSelection}"  
        Route="PageSelection"
        Shell.FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Defeated"
        ContentTemplate="{DataTemplate pages:Defeat}"
