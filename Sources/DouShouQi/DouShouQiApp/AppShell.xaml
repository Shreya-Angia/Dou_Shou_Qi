    <ShellContent
        Title="GameBoard"
        ContentTemplate="{DataTemplate pages:GameBoard}"
        Route="GameBoard"
        Shell.FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Pause"
        ContentTemplate="{DataTemplate pages:PausePage}"
        Route="PausePage"
        Shell.FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="SurePause"
        ContentTemplate="{DataTemplate pages:SurePausePage}"
        Route="SurePausePage"
        Shell.FlyoutItemIsVisible="False"/>
    
</Shell>