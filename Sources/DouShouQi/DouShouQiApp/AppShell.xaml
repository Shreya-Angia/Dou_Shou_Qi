        ContentTemplate="{DataTemplate pages:Character}"
        Route="Character"
        Shell.FlyoutItemIsVisible="False"/>
    
    <ShellContent
        Title="Crédits"
        ContentTemplate="{DataTemplate pages:Credits}"
        Route="Credits"
        Shell.FlyoutItemIsVisible="False"/>
    
    <ShellContent
        Title="Règles"
        ContentTemplate="{DataTemplate pages:Regles}" 
        Route="Regles"
        Shell.FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Parametres"
        ContentTemplate="{DataTemplate pages:Parametre}"
        Route="Parametre"
        Shell.FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="HomePage"
        Route="HomePage"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Shell.FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Customization"
        ContentTemplate="{DataTemplate pages:Customization}" 
        Route="Customization"
        Shell.FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="RepriseGame"
        ContentTemplate="{DataTemplate pages:RepriseGame}"  
        Route="RepriseGame"
        Shell.FlyoutItemIsVisible="False"/>
    
    <ShellContent
        Title="Select Game"
