<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="BoutonRond" TargetType="Button">
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderWidth" Value="3"/>
        <Setter Property="Margin" Value="16"/>
        <Setter Property="BorderColor" Value="#8B6A3B"/>
        <Setter Property="BackgroundColor" Value="#D7C9A5"/>
        <Setter Property="TextColor" Value="#8B6A3B"/>
    </Style>

    <Style x:Key="BoutonPrincipal" TargetType="Button">
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="200"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderWidth" Value="3"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="BorderColor" Value="#8B6A3B"/>
        <Setter Property="BackgroundColor" Value="#D7C9A5"/>
        <Setter Property="TextColor" Value="#8B6A3B"/>
    </Style>

</ResourceDictionary>