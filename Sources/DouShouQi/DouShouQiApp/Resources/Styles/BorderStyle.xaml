<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="StyleBorderCredits" TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Border-LIGHT}, Dark={StaticResource Border-DARK}}"/>
        <Setter Property="StrokeThickness" Value="4"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style x:Key="StyleBorderHeader" TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Border-LIGHT}, Dark={StaticResource Border-DARK}}"/>
        <Setter Property="StrokeThickness" Value="4"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 5"/>
    </Style>

</ResourceDictionary>